model BookingDaytrip {
  id        String   @id @default(cuid())
  bookingNumber String? @unique
  userId    String
  daytripId String
  status    String   @default("pending") // pending, confirmed, cancelled
  totalPrice Float
  currency   String   @default("COP")
  paymentProvider String? @default("none")
  paymentReference String?
  paymentStatus String   @default("pending") // pending, pending_payment, paid, failed, cancelled
  paymentCheckoutUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  daytrip Daytrip @relation(fields: [daytripId], references: [id], onDelete: Cascade)
}
model Daytrip {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Float
  duration    String
  horaSalida  String?
  horaRetorno String?
  published   Boolean  @default(false)
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  images      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  bookingsDaytrip BookingDaytrip[]

}
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      String   @default("USER")
  passwordHash String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings    Booking[]
  bookingsDaytrip BookingDaytrip[]
  favorites   Favorite[]
  savedSearches SavedSearch[]

  boats        Boat[] @relation("UserBoats")
  daytrips     Daytrip[]
  pushTokens   PushToken[]
}

model Boat {
  id          String   @id @default(cuid())
  name        String
  type        String   // yacht, speedboat, jetski, etc.
  description String?
  price       Float
  pricePerDay Float    @default(0)
  location    String
  neighborhood String?
  latitude    Float?
  longitude   Float?
  capacity    Int
  imageUrl    String?
  images      String?
  available   Boolean  @default(true)
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ownerId     String
  owner       User     @relation("UserBoats", fields: [ownerId], references: [id])

  bookings    Booking[]
  favorites   Favorite[]
}

model Booking {
  id        String   @id @default(cuid())
  bookingNumber String? @unique
  userId    String
  boatId    String
  startDate DateTime
  endDate   DateTime
  status    String   @default("pending") // pending, confirmed, cancelled
  totalPrice Float
  currency   String   @default("COP")
  paymentProvider String? @default("none")
  paymentReference String?
  paymentStatus String   @default("pending") // pending, pending_payment, paid, failed, cancelled
  paymentCheckoutUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  boat Boat @relation(fields: [boatId], references: [id], onDelete: Cascade)
}

model Favorite {
  id     String @id @default(cuid())
  userId String
  boatId String

  user User @relation(fields: [userId], references: [id])
  boat Boat @relation(fields: [boatId], references: [id], onDelete: Cascade)

  @@unique([userId, boatId])
}

model SavedSearch {
  id        String   @id @default(cuid())
  userId    String
  query     String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Otp {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@unique([email, code])
}

model PushToken {
  id        String   @id @default(cuid())
  userId    String   @unique
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}