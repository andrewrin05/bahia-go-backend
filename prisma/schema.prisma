// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      String   @default("USER")
  passwordHash String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listings      Listing[]
  favorites     Favorite[]
  savedSearches SavedSearch[]
  messages      Message[]
  boats         Boat[]
  bookings      Booking[]
  bookingsDaytrip BookingDaytrip[]
  daytrips      Daytrip[]
  pushTokens    PushToken[]
}

model Listing {
  id                String   @id @default(cuid())
  title             String
  description       String?
  price             Int
  city              String
  neighborhood      String?
  availableFrom     DateTime
  rooms             Int
  hasBillsIncluded  Boolean  @default(false)
  allowsPets        Boolean  @default(false)
  coverImage        String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  messages  Message[]
}

model Favorite {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  boatId String
  boat   Boat  @relation(fields: [boatId], references: [id], onDelete: Cascade)

  @@unique([userId, boatId])
}

model SavedSearch {
  id        String   @id @default(cuid())
  query     String
  filters   Json?
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id             String   @id @default(cuid())
  text           String
  createdAt      DateTime @default(now())

  senderId String
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)

  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  conversationId String
}

model Boat {
  id          String   @id @default(cuid())
  name        String
  description String?
  pricePerDay Float
  capacity    Int
  location    String
  published   Boolean  @default(false)
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  images      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  favorites   Favorite[]
  bookings    Booking[]
}

model Booking {
  id        String   @id @default(cuid())
  bookingNumber String? @unique
  userId    String
  boatId    String
  startDate DateTime
  endDate   DateTime
  totalPrice Float
  currency   String   @default("COP")
  status    String   @default("pending") // pending, confirmed, cancelled
  paymentProvider String? @default("none")
  paymentReference String?
  paymentStatus String   @default("pending") // pending, pending_payment, paid, failed, cancelled
  paymentCheckoutUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  boat Boat @relation(fields: [boatId], references: [id], onDelete: Cascade)
}

model Daytrip {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Float
  duration    String
  horaSalida  String?
  horaRetorno String?
  published   Boolean  @default(false)
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  images      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  bookingsDaytrip BookingDaytrip[]
}

model BookingDaytrip {
  id        String   @id @default(cuid())
  bookingNumber String? @unique
  userId    String
  daytripId String
  status    String   @default("pending") // pending, confirmed, cancelled
  totalPrice Float
  currency   String   @default("COP")
  paymentProvider String? @default("none")
  paymentReference String?
  paymentStatus String   @default("pending") // pending, pending_payment, paid, failed, cancelled
  paymentCheckoutUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  daytrip Daytrip @relation(fields: [daytripId], references: [id], onDelete: Cascade)
}

model Otp {
  id        String   @id @default(cuid())
  email     String
  code      String
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, code])
}

model PushToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}